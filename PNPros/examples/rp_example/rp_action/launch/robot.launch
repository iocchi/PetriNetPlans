<launch>
	<arg name="multirobot" default="false" />
    <arg name="robotname" default="none" />
    <arg name="initial_pose_x" default="0.0" />
    <arg name="initial_pose_y" default="1.8" />
    <arg name="initial_pose_a" default="0.0" />
    <arg name="laser_topic" default="scan" />

    <!-- Single robot -->

    <group unless="$(arg multirobot)">

      <param name="robot_name" value="$(arg robotname)" />

      <!-- map_server -->
      <node pkg="map_server" type="map_server" name="map_server" args="$(find rp_demo)/maps/dis-B1.yaml" respawn="false" >
          <param name="frame_id" value="map" />
      </node>

      <!-- move_base -->
      <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

		<rosparam file="$(find rp_action)/config/navigation/move_base_params.yaml" command="load" />
		<rosparam file="$(find rp_action)/config/navigation/costmap_common_params.yaml" command="load" ns="global_costmap" />
		<rosparam file="$(find rp_action)/config/navigation/costmap_common_params.yaml" command="load" ns="local_costmap" />
		<rosparam file="$(find rp_action)/config/navigation/local_costmap_params.yaml" command="load" />
		<rosparam file="$(find rp_action)/config/navigation/global_costmap_params.yaml" command="load" />
		<rosparam file="$(find rp_action)/config/navigation/base_local_planner_params.yaml" command="load" />

	  </node>
	
       
	  <!-- amcl -->
      <node pkg="amcl" type="amcl" name="amcl" respawn="true">
    
        <remap from="scan" to="$(arg laser_topic)"/>

        <!-- Default parameters -->
        <rosparam file="$(find rp_action)/config/localization/amcl.yaml" command="load" />

        <!-- Set initial pose -->
        <param name="initial_pose_x" value="$(arg initial_pose_x)" />
        <param name="initial_pose_y" value="$(arg initial_pose_y)" />
        <param name="initial_pose_a" value="$(arg initial_pose_a)" />
        <param name="initial_cov_xx" value="0.25" />
        <param name="initial_cov_yy" value="0.25" />
        <param name="initial_cov_aa" value="0.25" />
	
      </node>
	
      <node pkg="rp_action" type="turn" name="turn" args="-server" output="screen" />

    </group>


    <!-- Multi-robot -->

    <group ns="$(arg robotname)" if="$(arg multirobot)">
      <param name="robot_name" value="$(arg robotname)" />
      <param name="tf_prefix" value="$(arg robotname)" />

      <!-- map_server -->
      <node pkg="map_server" type="map_server" name="map_server" args="$(find rp_demo)/maps/dis-B1.yaml" respawn="false" >
          <param name="frame_id" value="map" />
      </node>

      <!-- move_base -->
      <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

		<rosparam file="$(find rp_action)/config/navigation/move_base_params.yaml" command="load" />
		<rosparam file="$(find rp_action)/config/navigation/costmap_common_params.yaml" command="load" ns="global_costmap" />
		<rosparam file="$(find rp_action)/config/navigation/costmap_common_params.yaml" command="load" ns="local_costmap" />
		<rosparam file="$(find rp_action)/config/navigation/local_costmap_params.yaml" command="load" />
		<rosparam file="$(find rp_action)/config/navigation/global_costmap_params.yaml" command="load" />
		<rosparam file="$(find rp_action)/config/navigation/base_local_planner_params.yaml" command="load" />

	  </node>
	
	  <!-- amcl -->
      <node pkg="amcl" type="amcl" name="amcl" respawn="true">
    
	    <remap from="scan" to="$(arg laser_topic)"/>

	    <!-- Default parameters -->
	    <rosparam file="$(find rp_action)/config/localization/amcl.yaml" command="load" />
	      
	    <!-- Override Params to include prefix -->
	    <param name="base_frame_id" value="$(arg robotname)/base_link"/>
	    <param name="odom_frame_id" value="$(arg robotname)/odom"/>
	    <param name="global_frame_id" value="$(arg robotname)/map" /> 

	    <!-- Set initial pose -->
	    <param name="initial_pose_x" value="$(arg initial_pose_x)" />
	    <param name="initial_pose_y" value="$(arg initial_pose_y)" />
	    <param name="initial_pose_a" value="$(arg initial_pose_a)" />
	    <param name="initial_cov_xx" value="0.25" />
	    <param name="initial_cov_yy" value="0.25" />
	    <param name="initial_cov_aa" value="0.25" />
	    
	  </node>
	
      <node pkg="rp_action" type="turn" name="turn" args="-server" output="screen" />

    </group>

</launch>

